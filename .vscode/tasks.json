{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build : debug",
      "command": "C:/mingw/mingw32/bin/g++.exe",
      "args": [
        "-g",
        "${workspaceFolder}/code/*.cpp",
        "-o",
        "${workspaceFolder}/build/asteroids.exe",
        "-IE:/repos/tools/SFML/SFML-2.5.1-windows-gcc-7.3.0-mingw-32-bit/SFML-2.5.1/include",
        "-LE:/repos/tools/SFML/SFML-2.5.1-windows-gcc-7.3.0-mingw-32-bit/SFML-2.5.1/lib",
        "-lsfml-audio-d",
        "-lsfml-graphics-d",
        "-lsfml-window-d",
        "-lsfml-system-d"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "compiler: \"C:/mingw/mingw32/bin/g++.exe\""
    },
    {
      "type": "cppbuild",
      "label": "Build : prod",
      "command": "C:/mingw/mingw32/bin/g++.exe",
      "args": [
        "-g",
        "${workspaceFolder}/code/*.cpp",
        "-o",
        "${workspaceFolder}/build/asteroids.exe",
        "-IE:/repos/tools/SFML/SFML-2.5.1-windows-gcc-7.3.0-mingw-32-bit/SFML-2.5.1/include",
        "-LE:/repos/tools/SFML/SFML-2.5.1-windows-gcc-7.3.0-mingw-32-bit/SFML-2.5.1/lib",
        "-lsfml-audio",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: \"C:/mingw/mingw32/bin/g++.exe\""
    }
  ]
}
